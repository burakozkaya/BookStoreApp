@{
    var temp = "";
}
@model List<AuthorListVm>

<table class="table table-active">
    <thead>
    <tr>
        <th>Name</th>
        <th>Contributed Books</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                @foreach (var bookTitle in item.BookTitles)
                {
                    <div>* @bookTitle</div>
                }
            </td>
                <td><a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>|<a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a></td>
        </tr>
    }
    </tbody>
</table>
